        <%= link_to 'New Game', game_new_pokemon_round_path(Game.pokemon_spellcheck), class: ' focus:ring-2 text-2xl focus:ring-offset-2 whitespace-nowrap bg-green-500 mb-4 inline-block text-white focus:ring-gray-500 bg-white transition duration-150 ease-in-out focus:outline-none rounded border rounded-lg border-gray-300 px-8 py-3  leading-6 hover:bg-green-300' %>
