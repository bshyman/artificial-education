<div class="min-h-screen bg-gradient-to-b from-blue-400 via-blue-300 to-green-300 relative">
  <!-- Floating Pokeballs Background -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <% 8.times do |i| %>
      <%= image_tag 'pokeball.svg', class: "absolute w-16 h-16 opacity-10 animate-float-pokeball", style: "left: #{rand(0..100)}%; top: #{rand(0..100)}%; animation-delay: #{i * 0.5}s; animation-duration: #{4 + rand(2)}s;" %>
    <% end %>
  </div>

  <div class="container mx-auto px-4 py-12 relative z-10">
    <!-- Hero Section -->
    <div class="text-center mb-12" x-data="{ show: false }" x-init="setTimeout(() => show = true, 100)">
      <div
        class="transform transition-all duration-1000"
        :class="show ? 'translate-y-0 opacity-100' : '-translate-y-10 opacity-0'">

        <!-- Pokeball Icon -->
        <div class="flex justify-center mb-6">
          <%= image_tag 'pokeball.svg', class: 'w-32 h-32 animate-spin-slow' %>
        </div>

        <h1 class="text-6xl md:text-7xl font-black text-white mb-4 drop-shadow-lg">
          ‚ö° Pokemon Spellcheck ‚ö°
        </h1>
        <p class="text-2xl md:text-3xl text-white font-bold mb-6">
          Catch 'Em All and Spell 'Em Right!
        </p>
      </div>

      <!-- Action Buttons -->
      <div
        class="flex flex-col sm:flex-row gap-4 justify-center items-center mb-8 transform transition-all duration-1000 delay-300"
        :class="show ? 'translate-y-0 opacity-100' : 'translate-y-10 opacity-0'">

        <%= link_to game_new_pokemon_round_path(Game.pokemon_spellcheck), class: 'group relative' do %>
          <div class="btn-pokemon bg-gradient-to-r from-green-400 to-green-600 hover:from-green-500 hover:to-green-700 text-white font-bold py-4 px-12 rounded-full text-2xl shadow-2xl transform hover:scale-110 transition-all duration-300 flex items-center gap-3">
            <%= image_tag 'pokeball.svg', class: 'w-8 h-8 group-hover:animate-spin' %>
            <span>Start New Game</span>
            <span class="text-3xl">üéÆ</span>
          </div>
        <% end %>

        <%= link_to pokedex_pokemon_index_path, class: 'group' do %>
          <div class="btn-pokemon bg-gradient-to-r from-yellow-400 to-yellow-600 hover:from-yellow-500 hover:to-yellow-700 text-white font-bold py-4 px-12 rounded-full text-2xl shadow-2xl transform hover:scale-110 transition-all duration-300 flex items-center gap-3">
            <span class="text-3xl">üìñ</span>
            <span>View Pokedex</span>
          </div>
        <% end %>
      </div>

      <!-- Points Info -->
      <div
        class="inline-block bg-white bg-opacity-90 rounded-2xl px-8 py-4 shadow-xl transform transition-all duration-1000 delay-500"
        :class="show ? 'scale-100 opacity-100' : 'scale-50 opacity-0'">
        <p class="text-lg font-bold text-gray-700">
          üåü Earn up to <span class="text-yellow-600 text-2xl">100 points</span> per game!
        </p>
      </div>
    </div>

    <!-- High Scores Section -->
    <div class="max-w-4xl mx-auto">
      <div
        class="bg-white bg-opacity-95 rounded-3xl shadow-2xl overflow-hidden transform transition-all duration-1000 delay-700"
        x-data="{ show: false }"
        x-init="setTimeout(() => show = true, 700)"
        :class="show ? 'translate-y-0 opacity-100' : 'translate-y-10 opacity-0'">

        <!-- Header -->
        <div class="bg-gradient-to-r from-yellow-400 via-yellow-500 to-yellow-400 p-6">
          <h2 class="flex items-center justify-center text-center font-bold text-white text-4xl">
            <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-trophy animate-bounce" width="56" height="56" viewBox="0 0 24 24" stroke-width="2.5" stroke="#ffffff" fill="none" stroke-linecap="round" stroke-linejoin="round">
              <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
              <line x1="8" y1="21" x2="16" y2="21"/>
              <line x1="12" y1="17" x2="12" y2="21"/>
              <line x1="7" y1="4" x2="17" y2="4"/>
              <path d="M17 4v8a5 5 0 0 1 -10 0v-8"/>
              <circle cx="5" cy="9" r="2"/>
              <circle cx="19" cy="9" r="2"/>
            </svg>
            <span class="mx-4">HIGH SCORES</span>
            <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-trophy animate-bounce" width="56" height="56" viewBox="0 0 24 24" stroke-width="2.5" stroke="#ffffff" fill="none" stroke-linecap="round" stroke-linejoin="round" style="animation-delay: 0.2s;">
              <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
              <line x1="8" y1="21" x2="16" y2="21"/>
              <line x1="12" y1="17" x2="12" y2="21"/>
              <line x1="7" y1="4" x2="17" y2="4"/>
              <path d="M17 4v8a5 5 0 0 1 -10 0v-8"/>
              <circle cx="5" cy="9" r="2"/>
              <circle cx="19" cy="9" r="2"/>
            </svg>
          </h2>
        </div>

        <!-- Coming Soon Message (replace this with actual high scores when data is available) -->
        <div class="p-12 text-center">
          <div class="text-8xl mb-4">üèÜ</div>
          <p class="text-2xl font-bold text-gray-700 mb-2">High Scores Coming Soon!</p>
          <p class="text-gray-500">Be the first to set a record!</p>
        </div>

        <table class="w-full">
          <thead class="bg-gray-50">
            <tr class="border-b-2 border-gray-200">
              <th class="py-4 px-6 text-left text-gray-700 font-bold">Rank</th>
              <th class="py-4 px-6 text-left text-gray-700 font-bold">Player</th>
              <th class="py-4 px-6 text-center text-gray-700 font-bold">Date</th>
              <th class="py-4 px-6 text-center text-gray-700 font-bold">Score</th>
            </tr>
          </thead>
          <tbody>
          <% @high_scores.each_with_index do |high_score, index| %>
            <tr class="border-b-2 border-gray-200">
              <td class="py-4 px-6 text-left text-gray-700"><%= index + 1 %></td>
              <td class="py-4 px-6 text-left text-gray-700"><%= high_score.player_name %></td>
              <td class="py-4 px-6 text-center text-gray-700"><%= high_score.created_at.strftime('%m/%d/%Y') %></td>
              <td class="py-4 px-6 text-center text-gray-700"><%= high_score.earned_value %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>

    <!-- Fun Facts Footer -->
    <div class="text-center mt-12">
      <div class="inline-block bg-red-500 bg-opacity-90 rounded-2xl px-8 py-4 shadow-xl animate-pulse-slow">
        <p class="text-white font-bold text-lg">üí° Pro Tip: Pay attention to spelling - gotta spell 'em all!</p>
      </div>
    </div>
  </div>
</div>

<style>
@keyframes float-pokeball {
  0%, 100% {
    transform: translateY(0px) rotate(0deg);
  }
  50% {
    transform: translateY(-20px) rotate(180deg);
  }
}

@keyframes spin-slow {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

@keyframes pulse-slow {
  0%, 100% {
    opacity: 1;
  }
  50% {
    opacity: 0.8;
  }
}

.animate-float-pokeball {
  animation: float-pokeball 5s ease-in-out infinite;
}

.animate-spin-slow {
  animation: spin-slow 8s linear infinite;
}

.animate-pulse-slow {
  animation: pulse-slow 3s ease-in-out infinite;
}
</style>
