<div class="px-4">
  <div
    class="lg:max-w-[1440px] md:max-w-[744px] max-w-[375px] w-full mx-auto py-6 lg:px-6 md:px-6 px-4 bg-white"
  >
    <div class="mb-10">
      <p
        class="text-xl font-semibold leading-normal text-gray-800 lg:text-2xl md:text-xl"
      >
        Redemption History
      </p>
    </div>
    <div class="hidden w-full border border-gray-300 lg:block md:hidden">
      <table class="w-full">
        <tr class="px-8 w-full">
          <th class="pt-4">
            <p
              class="pb-4 text-base font-semibold leading-none text-center text-gray-600"
            >
              Item
            </p>
          </th>
          <th class="pt-4 border-l">
            <p
              class="pb-4 text-base font-semibold leading-none text-center text-gray-600"
            >
              Product Name
            </p>
          </th>
          <th class="border-l pt-4">
            <p
              class="pb-4 text-base font-semibold leading-none text-center text-gray-600"
            >
              Unit Price
            </p>
          </th>
          <th class="border-l pt-4">
            <p
              class="pb-4 text-base font-semibold leading-none text-center text-gray-600"
            >
              Redeemed At
            </p>
          </th>
        </tr>

        <% @user_prizes.each do |user_prize| %>
          <tr class="border-t">
            <td>
              <img
                class="px-8 py-4 border-r ml-[2px]"
                src="https://tuk-cdn.s3.amazonaws.com/can-uploader/perfum777777.png"
                alt="perfume-lg"
                />
            </td>
            <td>
              <p
                class="px-8 text-base font-medium leading-none text-left text-gray-600"
              >
                <%= user_prize.prize_name %>
              </p>
            </td>
            <td class="border-l border-r">
              <p
                class="px-8 text-base font-semibold leading-none text-center text-gray-800"
              >
                <%= user_prize.prize_cost %> XP
              </p>
            </td>
            <td class="px-2">
              <p
                class="px-8 text-base font-semibold leading-none text-center text-gray-800"
              >
                <%= user_prize.created_at.strftime("%b %d, %Y") %>
              </p>
            </td>
          </tr>
        <% end %>
      </table>
    </div>
    <div class="block lg:hidden md:block">
      <div class="px-6 border border-gray-300">
        <div class="pt-10">
          <img
            class="hidden lg:hidden md:block"
            src="https://tuk-cdn.s3.amazonaws.com/can-uploader/perfume-md7777.png"
            alt="md"
            />
          <img
            class="block lg:hidden md:hidden"
            src="https://tuk-cdn.s3.amazonaws.com/can-uploader/peer0000.png"
            alt="sm"
            />
        </div>
        <div class="flex flex-col justify-between mt-6 md:flex-row">
          <p
            class="mb-4 text-base font-medium leading-normal text-gray-600 lg:mb-0 md:mb-0"
          >
            The Silence Primeum Perfume -Luxe Collection
          </p>
          <p class="text-base font-semibold leading-none text-gray-800">
            $ 74.34
          </p>
        </div>
        <div class="mt-8 mb-8 space-y-4">
          <button
            class="w-full px-4 py-4 text-base font-medium leading-none text-gray-600 duration-300 ease-in-out transform bg-transparent border border-gray-600 hover:bg-gray-100"
          >
            Remove
          </button>
          <button
            class="w-full px-4 py-4 text-base font-medium leading-none text-center text-white duration-300 ease-in-out transform bg-gray-800 border border-gray-600 hover:bg-gray-700"
          >
            Add To Cart
          </button>
        </div>
      </div>
      <div class="px-6 border border-gray-300">
        <div class="pt-10">
          <img
            class="hidden lg:hidden md:block"
            src="https://tuk-cdn.s3.amazonaws.com/can-uploader/shoe7777.png"
            alt="md"
            />
          <img
            class="block lg:hidden md:hidden"
            src=" https://tuk-cdn.s3.amazonaws.com/can-uploader/sho9999.png"
            alt="sm"
            />
        </div>
        <div class="flex flex-col justify-between mt-6 md:flex-row">
          <p
            class="mb-4 text-base font-medium leading-normal text-gray-600 lg:mb-0 md:mb-0"
          >
            Unisex Z-Runners 365-t Sprinter Splasher
          </p>
          <p class="text-base font-semibold leading-none text-gray-800">
            $ 65.84
          </p>
        </div>
        <div class="mt-8 mb-8 space-y-4">
          <button
            class="w-full px-4 py-4 text-base font-medium leading-none text-gray-600 duration-300 ease-in-out transform bg-transparent border border-gray-600 hover:bg-gray-100"
          >
            Remove
          </button>
          <button
            class="w-full px-4 py-4 text-base font-medium leading-none text-center text-white duration-300 ease-in-out transform bg-gray-800 border border-gray-600 hover:bg-gray-700"
          >
            Add To Cart
          </button>
        </div>
      </div>
      <div class="px-6 border border-gray-300">
        <div class="pt-10">
          <img
            class="hidden lg:hidden md:block"
            src="https://tuk-cdn.s3.amazonaws.com/can-uploader/lotion8888.png"
            alt="md"
            />
          <img
            class="block lg:hidden md:hidden"
            src="https://tuk-cdn.s3.amazonaws.com/can-uploader/loi0055.png"
            alt="sm"
            />
        </div>
        <div class="flex flex-col justify-between mt-6 md:flex-row">
          <p
            class="mb-4 text-base font-medium leading-normal text-gray-600 lg:mb-0 md:mb-0"
          >
            Nescessaire The Body Lotion
          </p>
          <p class="text-base font-semibold leading-none text-gray-800">
            $ 124.14
          </p>
        </div>
        <div class="mt-8 mb-8 space-y-4">
          <button
            class="w-full px-4 py-4 text-base font-medium leading-none text-gray-600 duration-300 ease-in-out transform bg-transparent border border-gray-600 hover:bg-gray-100"
          >
            Remove
          </button>
          <button
            class="w-full px-4 py-4 text-base font-medium leading-none text-center text-white duration-300 ease-in-out transform bg-gray-800 border border-gray-600 hover:bg-gray-700"
          >
            Add To Cart
          </button>
        </div>
      </div>
    </div>
  </div>
</div>
